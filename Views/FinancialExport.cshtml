@{
    ViewData["Title"] = "Financial Export";
}

<h2>Financial Data Export</h2>

<form asp-action="ProcessExport" method="post">
    <div class="form-group">
        <label for="year">Select Year:</label>
        <select class="form-control" name="year" required>
            @for (int y = DateTime.Now.Year; y >= 2020; y--)
            {
                <option value="@y">@y</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quarter">Select Quarter:</label>
        <select class="form-control" name="quarter">
                        <option value="0">Entire Year</option>
                        <option value="1">Q1 (Jan-Mar)</option>
                        <option value="2">Q2 (Apr-Jun)</option>
                        <option value="3">Q3 (Jul-Sep)</option>
                        <option value="4">Q4 (Oct-Dec)</option>
                    </select>
    </div>

    <div>
        <label>Export Format</label>

        <div>
            <input class="form-check-input" type="radio" name="format" value="excel" checked/>
            <label class="form-check-label">Excel (.xlsx)</label>
        </div>

        <div>
            <input class="form-check-input" type="radio" name="format" value="csv" checked />
            <label class="form-check-label">CSV (.csv)</label>
        </div>

        <div>
            <input class="form-check-input" type="radio" name="format" value="pdf" checked />
            <label class="form-check-label">PDF (.pdf)</label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            <i class="fas fa-file-export"></i>Generate Export
        </button>

    </div>
    
</form>